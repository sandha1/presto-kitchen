<div class="container my-3">
  <h1 class="text-center ">My bookings</h1>

  <% @appliances.each do |appliance| %>

    <div class="card-product border-bottom mt-3">
      <% if appliance.photo.attached? %>
        <%= cl_image_tag(appliance.photo.key) %>
      <% else %>
        <%= image_tag("default_appliance.jpg") %>
      <% end %>

      <div class="card-product-infos">
        <p><%= appliance.name %><p>
        <p><%= appliance.description %><p>
      </div>
    </div>

    <div class="card-product">
      <div class="card-product-infos">
        <% if @bookings.any? %>
          <% @bookings.each do |booking| %>

            <div class="card-product-infos d-flex justify-content-between align-items-center">
              <div>
                <h5><strong>Booking request: </strong><%= booking.created_at %></h5>
                <h5><strong>Period: </strong><%= booking.start_date %> to <%= booking.end_date %></p>
                <h5><strong>Price: </strong><%= booking.total_price %> â‚¬</p>
              </div>

              <div class="ms-5">
                <% if booking.accepted.nil? %>
                  <h5><strong>Status: </strong><span style="color: orange"><i class="fa-regular fa-hourglass-half"></i></span> <%= "Pending" %></h5>
                <% elsif booking.accepted %>
                  <h5><strong>Status: </strong><span style="color: DarkGreen"><i class="fa-solid fa-circle-check"></i></span> <%= "Accepted" %></h5>
                <% else %>
                  <h5><strong>Status: </strong><span style="color: maroon"><i class="fa-solid fa-circle-xmark"></i></span> <%= "Declined" %></h5>
                <% end %>
              </div>
            </div>
          <% end %>

        <% end %>
      </div>

    </div>
  <% end %>
</div>
