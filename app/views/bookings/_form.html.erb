<%= simple_form_for([appliance, booking], html: { data: { controller: :datepicker } }) do |f| %>
  <%= f.input :start_date, as: :string, input_html: { data: { datepicker_target: 'startDateInput' } } %>
  <%= f.input :end_date, as: :string, input_html: { data: { datepicker_target: 'endDateInput' } } %>

  <%= link_to 'Book now!', appliances_path, class: 'btn btn-primary' %>
<% end %>
