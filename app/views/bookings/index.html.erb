<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-10 col-sm-offset-1">
      <h1>My bookings</h1>
      <% if @bookings.any? %>
        <ul class="list-group mb-3">
          <% @bookings.each do |booking| %>
            <li class="list-group-item">
              <%= link_to "see booking", booking_path(booking) %>
            </li>
          <% end %>
        </ul>
      <% else %>
        <p>No booking</p>
      <% end %>
    </div>
  </div>
</div>
